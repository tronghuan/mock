<?xml version="1.0"?>
<config>
    <modules>
        <SM_MegaMenu>
            <version>1.0.0</version>
        </SM_MegaMenu>
    </modules>
    <frontend>
        <layout>
            <updates>
                <sm_megamenu>
                    <file>sm_megamenu.xml</file>
                </sm_megamenu>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <sm_megamenu>
                <class>SM_MegaMenu_Block</class>
            </sm_megamenu>
            <page>
                <rewrite>
                    <html_topmenu>SM_MegaMenu_Block_Topmenu</html_topmenu>
                </rewrite>
            </page>
        </blocks>
        <helpers>
            <sm_megamenu>
                <class>SM_MegaMenu_Helper</class>
            </sm_megamenu>
        </helpers>
        <models>
            <sm_megamenu>
                <class>SM_MegaMenu_Model</class>
                <resourceModel>sm_megamenu_resource</resourceModel>
            </sm_megamenu>
            <sm_megamenu_resource>
                <class>SM_MegaMenu_Model_Resource</class>
                <entities>
                    <sm_megamenu>
                        <table>sm_megamenu</table>
                    </sm_megamenu>
                </entities>
            </sm_megamenu_resource>
        </models>
        <resources>
            <sm_megamenu_setup>
                <setup>
                    <module>SM_MegaMenu</module>
                    <class>SM_MegaMenu_Model_Resource_Setup</class>
                </setup>
            </sm_megamenu_setup>
        </resources>
    </global>
    <default>
        <sm_megamenu>
            <general>
                <enable>1</enable>
            </general>
        </sm_megamenu>
    </default>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <sm_megamenu before="Mage_Adminhtml">SM_MegaMenu_Adminhtml</sm_megamenu>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <sm_megamenu>
                    <file>sm_megamenu.xml</file>
                </sm_megamenu>
            </updates>
        </layout>
    </adminhtml>
</config>
