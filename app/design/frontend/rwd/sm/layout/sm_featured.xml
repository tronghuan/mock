<?xml version="1.0"?>
<layout>
	<cms_index_index>
		<reference name="content">
			<block type="sm_featured/product" name="home.catalog.product.featured" before="-">
				<action method="setTemplate">
					<template helper="sm_featured/getTemplateForHomePage"></template>
				</action>
		        <action method="addPriceBlockType">
		            <type>bundle</type>
		            <block>bundle/catalog_product_price</block>
		            <template>bundle/catalog/product/price.phtml</template>
		        </action>
		    </block>
		</reference>
	</cms_index_index>
	<catalog_category_view>
		<reference name="content">
			<block type="sm_featured/product" name="category.product.featured">
				<action method="setTemplate">
					<template helper="sm_featured/getTemplateForCategoryPage" />
				</action>
				<action method="setInCategory"><value>true</value></action>
		        <action method="addPriceBlockType">
		            <type>bundle</type>
		            <block>bundle/catalog_product_price</block>
		            <template>bundle/catalog/product/price.phtml</template>
		        </action>
		    </block>
		</reference>
	</catalog_category_view>
</layout>