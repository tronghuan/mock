<?xml version="1.0"?>
<layout>
    <default>
        <reference name="head">
            <action method="addCss">
                <name>css/font-awesome.min.css</name>
            </action>
        </reference>
        <reference name="header">
            <block type="cms/block" name="topbar_callus" as="topbar_callus">
                <action method="setBlockId">
                    <block_id>topbar_callus</block_id>
                </action>
            </block>
            <block type="cms/block" name="topbar_menu" as="topbar_menu">
                <action method="setBlockId">
                    <block_id>topbar_menu</block_id>
                </action>
            </block>
        </reference>
        <reference name="footer">
            <block type="cms/block" name="footer.about-us">
                <action method="setBlockId">
                    <block_id>footer-about-us</block_id>
                </action>
            </block>
            <block type="cms/block" name="footer.from-twitter">
                <action method="setBlockId">
                    <block_id>footer-from-twitter</block_id>
                </action>
            </block>
            <block type="cms/block" name="footer.customer-service">
                <action method="setBlockId">
                    <block_id>footer-links-service</block_id>
                </action>
            </block>
            <block type="cms/block" name="footer.connect-us">
                <action method="setBlockId">
                    <block_id>footer-connect-us</block_id>
                </action>
            </block>
        </reference>
    </default>
    <cms_index_index>
        <reference name="content">
            <block type="cms/block" name="content.brands" after="-">
                <action method="setBlockId">
                    <block_id>content-favourite-brands</block_id>
                </action>
            </block>
        </reference>
    </cms_index_index>
</layout>
